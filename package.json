{
  "name": "dealer-applications",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:convex": "pnpm -C convex dev",
    "convex:codegen": "pnpm -C convex codegen",
    "convex:deploy": "pnpm -C convex deploy",
    "convex:env": "pnpm -C convex env"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "convex": "^1.26.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
