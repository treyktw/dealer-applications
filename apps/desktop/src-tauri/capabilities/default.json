{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "store:default",
    "process:default",
    "dialog:default",
    "fs:default",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-meta-recursive",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:scope-appdata-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "/Users/treymurray/DevSpace/dealer-applications/apps/desktop/documents/**" }
      ]
    }
  ]
}