{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dealer Software",
  "version": "0.2.0",
  "identifier": "net.universalautobrokers.dealersoftware",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dealer Software",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "exceptionDomain": null
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": [
          "dealer-sign"
        ]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/treyktw/dealer-applications/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg3MUQwMkM2QTFGOTUyQkYKUldTL1V2bWh4Z0lkaDJOaDg2VUN4enp6aTljTkR3Tm9NREgvL2tOYUh3YnlMcGJGTzZCK1N6aHAK%"
    }
  }
}
