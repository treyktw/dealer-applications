{
  "expo": {
    "name": "Dealer Applications",
    "slug": "dealer-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0d1117"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dealerapps.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0d1117"
      },
      "package": "com.dealerapps.mobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Dealer Applications to access your camera to scan VINs."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Dealer Applications to access your photos to upload vehicle images."
        }
      ]
    ],
    "scheme": "dealer-app",
    "experiments": {
      "typedRoutes": true
    }
  }
}
